<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_gravity="center_horizontal">
    
    <ImageView
        android:id="@+id/ChatroomImage" 
	    android:layout_width="@dimen/image_size_chatroom"
	    android:layout_height="@dimen/image_size_chatroom"
        android:contentDescription="Avatar"
	    android:src="@drawable/chat_room_icon"
	    android:gravity="center"
    />
    
    <TextView
        android:id="@+id/ChatroomName"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:singleLine="true"
        android:scrollHorizontally="true"
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:maxLines="1"
    	android:gravity="center"
    	android:layout_gravity="center_horizontal"
        android:textColor="?attr/ChatTextColor"
        android:textSize="@dimen/text_size_button_very_small"
    />
    
</LinearLayout>
