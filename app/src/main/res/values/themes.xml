<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Dialog.Alert">
        <item name="colorAccent">@color/primary_color</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:background">@color/background_color</item>
    </style>

    <style name="AppCompatAlertDialogStyleBlue" parent="Theme.AppCompat.Dialog.Alert">
        <item name="colorAccent">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:background">@color/background_color_blue</item>
    </style>

    <style name="AppTheme" parent="AppBaseTheme">

        <!-- COLORS -->
        <item name="BackgroundColor">@color/background_color</item>
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/primary_color_dark</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="colorAccent">@color/primary_color</item>
        <!-- CHAT COLORS -->
        <item name="BackgroundChatEmpty">@color/background_chat_empty</item>
        <item name="BackgroundChatLine">@color/background_chat_line</item>
        <item name="BackgroundChatLineSelf">@color/background_chat_line_owned</item>
        <item name="BackgroundChatSystem">@color/background_chat_line_system</item>
        <item name="BackgroundChatAttention">@color/background_chat_line_attention</item>
        <item name="BackgroundChatWarning">@color/background_chat_warning</item>
        <!-- CHANNEL TABS COLORS -->
        <item name="BackgroundChatTab">@color/background_chat_tab</item>
        <item name="BackgroundChatTabActive">@color/background_chat_tab_active</item>
        <item name="BackgroundChatTabAttention">@color/background_chat_tab_attention</item>
        <!-- TEXT COLORS -->
        <item name="ChatTextColor">@color/text_chat_color</item>
        <!-- IMAGES -->
        <item name="ToggleDirectionButton">@drawable/btn_direction_toggle</item>
        <!-- STYLES -->
        <item name="UserListBackground">@drawable/background_userlist</item>
        <item name="alertDialogTheme">@style/AppCompatAlertDialogStyle</item>
        <item name="alertDialogStyle">@style/AppCompatAlertDialogStyle</item>
        <item name="android:alertDialogTheme">@style/AppCompatAlertDialogStyle</item>
        <item name="android:alertDialogStyle">@style/AppCompatAlertDialogStyle</item>
    </style>
    
    <style name="AppTheme.Blue" parent="AppBaseTheme">
        <!-- COLORS -->  
        <item name="BackgroundColor">@color/background_color_blue</item>
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/primary_color_dark</item>
        <item name="android:textColorSecondary">@color/secondary_text_blue</item>
        <item name="colorAccent">@color/primary_color_blue</item>
        <!-- CHAT COLORS -->
        <item name="BackgroundChatEmpty">@color/background_chat_empty_blue</item>
        <item name="BackgroundChatLine">@color/background_chat_line_blue</item>
        <item name="BackgroundChatLineSelf">@color/background_chat_line_owned_blue</item>
        <item name="BackgroundChatSystem">@color/background_chat_line_system_blue</item>
        <!-- CHANNEL TABS COLORS -->
        <item name="BackgroundChatTab">@color/background_chat_tab_blue</item>
        <item name="BackgroundChatTabActive">@color/background_chat_tab_active_blue</item>
        <item name="BackgroundChatTabAttention">@color/background_chat_tab_attention_blue</item>
        <!-- TEXT COLORS -->
           
        <!-- IMAGES -->
        
        <!-- STYLES -->
        <item name="UserListBackground">@drawable/background_userlist_blue</item>
        <item name="alertDialogTheme">@style/AppCompatAlertDialogStyleBlue</item>
        <item name="alertDialogStyle">@style/AppCompatAlertDialogStyleBlue</item>
        <item name="android:alertDialogTheme">@style/AppCompatAlertDialogStyleBlue</item>
        <item name="android:alertDialogStyle">@style/AppCompatAlertDialogStyleBlue</item>
    </style>
</resources>
