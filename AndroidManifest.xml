<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.andfchat"
    android:versionCode="1"
    android:versionName="0.1" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:name="com.andfchat.frontend.application.AndFChatApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Holo" >
        <activity
            android:name="com.andfchat.frontend.activities.Login"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.andfchat.frontend.activities.ChatScreen"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.andfchat.frontend.activities.PickChar"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.andfchat.frontend.activities.Settings"
            android:label="@string/app_name" >
        </activity>
    </application>

</manifest>
