<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainScreen" 
    android:orientation="vertical">
    
    <LinearLayout         
        android:id="@+id/chat_window"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"    
    	android:orientation="horizontal">   
    	        
        <fragment android:name="com.homebrewn.flistchat.frontend.fragments.ChannelListFragment"
                android:id="@+id/channelListFragment"                
                android:layout_width="90dp"
                android:layout_height="match_parent"
            />   
        
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1.0"
	    	android:layout_height="match_parent"
	    	android:orientation="vertical">         
                    
            <LinearLayout
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content" 
			    android:layout_gravity="center_horizontal"   
			    android:gravity="center_horizontal"
		    	android:orientation="horizontal">
	    	
                <Button
			        android:id="@+id/showDescription"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:onClick="showDescription"
			        android:text="SHOW_DESCRIPTION"/>
                
                <TextView 
                    android:id="@+id/channelName"
            		android:layout_height="wrap_content"
            		android:layout_width="wrap_content"
            		android:gravity="center_horizontal"
            		android:orientation="horizontal"
            		android:textSize="20dp"
            		android:textColor="@color/white"            		
            		android:text="CHANNEL_NAME"
            		/>
                
	                                    
	            <LinearLayout
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content"    
			    	android:orientation="horizontal"
			        android:layout_gravity="right"
			        android:gravity="right">
                
	   			    <Button
				        android:id="@+id/leaveButton"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:onClick="leaveActiveChat"
				        android:layout_gravity="right"
				        android:layout_alignParentRight="true"
				        android:gravity="right"
				        android:text="LEAVE_CHANNEL"
                    />
	   			    
   			    </LinearLayout>
                
            </LinearLayout> 
            
            <fragment android:name="com.homebrewn.flistchat.frontend.fragments.ChatFragment"
                android:id="@+id/chatFragment"                
                android:layout_width="match_parent"
                android:layout_height="match_parent"
            />   
            
        </LinearLayout>
        
    	<fragment android:name="com.homebrewn.flistchat.frontend.fragments.UserListFragment"
                android:id="@+id/userListFragment"                
                android:layout_width="150dp"
                android:layout_height="match_parent"
            />   
        
    </LinearLayout>

</LinearLayout>
